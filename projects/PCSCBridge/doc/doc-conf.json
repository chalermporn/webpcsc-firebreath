{
    "tags": {
        "allowUnknownTags": true
    },
    "source": {
        "include": [ "js/README.md",
                     "js/scard.js" ],
        "exclude": [],
        "includePattern": ".+\\.(js(doc)?|md)$",
        "excludePattern": "(^|\\/|\\\\)_"
    },
    "plugins": [ "plugins/markdown" ],
    "markdown": {
         "parser": "evilstreak",
    },
    "templates": {
        "cleverLinks": false,
        "monospaceLinks": false
    },
    "opts": {
        "encoding": "utf8", 
        "destination": "./doc/", 
        "lenient": true, 
    }
}
